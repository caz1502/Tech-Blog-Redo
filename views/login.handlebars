{{> nav}}

<div class="container">
  <div class="row row-cols-1">  
    <div class="col d-flex justify-content-center">

  {{!-- log in --}}
      <div class="card border text-white w-25">
        <div class="card-header border-white">
          <h1 class="m-0 text-center">Login</h1>
        </div>
        <div class="card-body d-flex justify-content-center">
          <form class="form login-form">
            {{!-- email --}}
            <div class="form-group ">
              <label for="email-login" class="col-md-4 col-form-label formContainer">Email:</label>
              <input class="form-input border-white text-black" type="text" id="email-login" />
            </div>
            {{!-- password --}}
            <div class="form-group">
              <label for="password-login" class="col-md-4 col-form-label formContainer">Password:</label>
              <input class="form-input border-white text-black" type="password" id="password-login" />
            </div>
            {{!-- button --}}
            <div class="form-group d-flex justify-content-left mt-4">
              <button class="btn text-white" type="submit">Sign In</button>
            </div>
          </form>
        </div>
      </div>

      {{!-- sign up --}}
      <div class="card border text-white w-25">
        <div class="card-header  border-white">
          <h1 class="m-0 text-center">Sign Up</h1>
        </div>
        <div class="card-body d-flex justify-content-center">
          <form class="form signup-form">
            {{!-- name --}}
            <div class="form-group">
              <label for="name-signup" class="col-md-4 col-form-label formContainer">Name:</label>
              <input class="form-input border-white text-black" type="text" id="name-signup" />
            </div>
            {{!-- email --}}
            <div class="form-group">
              <label for="email-signup" class="col-md-4 col-form-label formContainer">Email:</label>
              <input class="form-input border-white  text-black" type="text" id="email-signup" />
            </div>
            <div class="form-group">
              {{!-- password --}}
              <label for="password-signup" class="col-md-4 col-form-label formContainer">Password:</label>
              <input class="form-input border-white text-black" type="password" id="password-signup" />
            </div>
            {{!-- button --}}
            <div class="form-group d-flex justify-content-left mt-4">
              <button class="btn text-white" type="submit">Sign Up</button>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>

<script src="/js/login.js"></script>